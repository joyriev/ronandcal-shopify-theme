{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding bg-cover bg-center"
  style="background-color: {{ section.settings.background_color }}; background-image: url('{{ section.settings.image | image_url }}');">
  <div class="page-width">
    <div class="ml-auto max-w-[500px] min-h-[300px] flex flex-col items-center [&>*]:m-0 gap-6 md:px-10">
      <h1 class="text-3xl md:text-4xl font-black">{{ section.settings.title }}</h1>
      <p class="text-lg font-medium">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_text }}</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Homepage Hero",
    "class": "homepage-hero",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fcfbf9"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "review_text",
        "label": "Review Text",
        "default": "LOVED BY 10,000 CUSTOMERS"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Homepage Hero"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Homepage Hero"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "GET NORDIC GLIDE"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "secondary_button_text",
        "label": "Secondary Button Text",
        "default": "Not sure yet? Explore More â†’"
      }, {
        "type": "url",
        "id": "secondary_button_link",
        "label": "Secondary Button Link"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Homepage Hero"
      }
    ]
  }
{% endschema %}