{% assign chosen_product = all_products['birch'] %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: 40px;
    padding-bottom: 400px;
    background-image: url('{{ section.settings.mobile_background_image | image_url }}');
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: 120px;
      padding-bottom: 120px;
      background-image: url('{{ section.settings.background_image | image_url }}');
    }
  }
{%- endstyle -%}

<div id="{{ section.id }}" class="section-{{ section.id }}-padding bg-center-top bg-cover">
  <div class="page-width">
    <div class="ml-auto max-w-[500px] md:px-10 text-center md:text-left">
      <h1 class="text-3xl md:text-4xl font-black mt-0">{{ section.settings.title }}</h1>
      {% comment %} <p class="text-lg font-medium">{{ section.settings.subtitle }}</p> {% endcomment %}
      <p class="text-lg font-medium">Save {{  chosen_product.price | times: 25.85 | money }} over 10 years. No subscriptions. No cartridge</p>
      <a href="{{ section.settings.button_link }}" class="button">Get Yours for {{ chosen_product.price | money_with_currency }}</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Homepage Hero",
    "class": "homepage-hero",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fcfbf9"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_background_image",
        "label": "Mobile Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Homepage Hero"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Homepage Hero"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "GET NORDIC GLADE"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "header",
        "content": "Section Padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Homepage Hero"
      }
    ]
  }
{% endschema %}