{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding bg-cover bg-center"
  style="background-color: {{ section.settings.background_color }}; background-image: url('{{ section.settings.background_image | image_url }}');">
  <div class="page-width">
    <h2 class="text-3xl md:text-4xl font-black mt-0 !mb-12 text-center">{{ section.settings.title }}</h2>
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3">

      {% for block in section.blocks %}
        <div>
          <a class="block mb-3" href="{{ block.settings.button_link }}">
            <div class="ratio bg-light mb-2 ratio-5x4 shadow">
              <video
                class="w-full rounded-lg h-auto"
                src="{{ block.settings.video | file_url }}"
                alt="{{ block.settings.heading }}"
                autoplay
                muted
                loop
                playsinline></video>
            </div>
          </a>
          <h3 class="text-2xl mb-2 font-bold">{{ block.settings.heading }}</h3>
          <div class="mb-4">
            {{ block.settings.description }}
          </div>
        </div>
      {% endfor %}
      <div>
        <a class="block mb-3" href="">
          <div class="ratio bg-light mb-2 ratio-5x4 shadow">
            <img
              class="w-full rounded-lg h-auto"
              src="http://ronandcal.com/cdn/shop/files/nordic_comparison_hp_3.png?v=1765159717"
              alt="Blade Control."
              height=""
              width="">
          </div>
        </a>
        <h3 class="text-2xl mb-2 font-bold">Blade Control.</h3>
        <div class="mb-4">
          <p>More Precision With Fewer Strokes</p>
          <ul>
            <li>Most razors struggle to maintain it, especially with pressure<br></li>
          </ul>
          <p>Nordic Glade is engineered to:</p>
          <ul>
            <li>Hold the correct angle automatically and deliver accuracy with less pressure and fewer strokes</li>
          </ul>
          <p>Balanced efficiency and skin comfort â€” every time.</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "How It Works",
    "class": "how-it-works",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fcfbf9"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "How It Works"
      },
      {
        "type": "header",
        "content": "Section Padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "video",
            "id": "video",
            "label": "Video"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "How It Works"
      }
    ]
  }
{% endschema %}